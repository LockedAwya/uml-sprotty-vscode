{
    "name": "uml-extension-langium",
    "displayName": "",
    "description": "",
    "private": true,
    "publisher": "TypeFox",
    "version": "0.5.0",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "uml",
                "aliases": [
                    "uml",
                    "umodel"
                ],
                "extensions": [
                    ".umodel"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "uml",
                "scopeName": "source.umodel",
                "path": "./syntaxes/umodel.tmLanguage.json"
            }
        ],
        "customEditors": [
            {
                "viewType": "uml-diagram",
                "displayName": "Uml-diagram Editor",
                "selector": [
                    {
                        "filenamePattern": "*.umodel"
                    }
                ],
                "priority": "option"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "uml-container",
                    "title": "UML",
                    "icon": "$(symbol-structure)"
                }
            ]
        },
        "views": {
            "uml-container": [
                {
                    "id": "uml",
                    "type": "webview",
                    "name": "UML Display"
                }
            ]
        },
        "commands": [
            {
                "command": "uml.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "Uml Diagram"
            },
            {
                "command": "uml.diagram.fit",
                "title": "Fit to Screen",
                "category": "Uml Diagram"
            },
            {
                "command": "uml.diagram.center",
                "title": "Center selection",
                "category": "Uml Diagram"
            },
            {
                "command": "uml.diagram.delete",
                "title": "Delete selected element",
                "category": "Uml Diagram"
            },
            {
                "command": "uml.diagram.export",
                "title": "Export diagram to SVG",
                "category": "Uml Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "uml.diagram.open",
                    "when": "editorLangId == 'uml'"
                },
                {
                    "command": "uml.diagram.fit",
                    "when": "uml-diagram-focused"
                },
                {
                    "command": "uml.diagram.center",
                    "when": "uml-diagram-focused"
                },
                {
                    "command": "uml.diagram.delete",
                    "when": "uml-diagram-focused"
                },
                {
                    "command": "uml.diagram.export",
                    "when": "uml-diagram-focused"
                }
            ],
            "editor/context": [
                {
                    "command": "uml.diagram.open",
                    "when": "editorLangId == 'uml'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "uml.diagram.open",
                    "when": "editorLangId == 'uml'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "uml.diagram.open",
                    "when": "resourceExtname == '.umodel'",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "uml.diagram.fit",
                "when": "uml-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "uml.diagram.center",
                "when": "uml-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "uml.diagram.export",
                "when": "uml-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "uml.diagram.delete",
                "when": "uml-diagram-focused"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:uml",
        "onWebviewPanel:uml",
        "onCustomEditor:uml",
        "onView:uml",
        "onCommand:uml.diagram.open"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview"
    ],
    "main": "./pack/states-extension",
    "devDependencies": {
        "@types/node": "^12.12.6",
        "@types/vscode": "1.50.0",
        "source-map-loader": "^3.0.0",
        "sprotty-vscode": "^0.5.0",
        "states-language-server": "^0.5.0",
        "states-sprotty-webview": "^0.5.0",
        "ts-loader": "^9.2.6",
        "typescript": "~4.6.2",
        "vscode-languageclient": "^8.0.2",
        "webpack": "^5.64.2",
        "webpack-cli": "^4.9.1"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run build && yarn run copy-language-server && yarn run copy-webview",
        "clean": "shx rm -fr pack",
        "build": "webpack --mode=development",
        "watch": "webpack --mode=development --watch",
        "copy-language-server": "cp ../language-server/out/* pack/",
        "copy-webview": "cp ../../uml-webview/out/* pack/"
    }
}